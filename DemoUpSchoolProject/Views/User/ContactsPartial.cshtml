@model DemoUpSchoolProject.Models.Entities.TBL_Message
<section class="w3l-contactblock" id="contact">
    <div class="midd-w3 py-5">
        <div class="container py-lg-4 py-md-3">
            <div class="contact-heading text-center">
                <span class="text">Benimle İletişime Geç </span>
                <h3 class="title-big">Birlikte çalışmaya <span>hazır mısın?</span></h3>
                <p class="mt-4">Projeye başlayalım!</p>
            </div>
            <div class="row mt-md-5 mt-4 pt-lg-3">
                <div class="col-lg-5">
                    <p>
                        Benimle iletişime geç!
                    </p>
                    <ul class="address mt-md-5 mt-4">
                        <li class="mb-4">
                            <p><span class="fa fa-envelope-open"></span> <a href="mailto:tulinttaspinar@gmail.com">tulinttaspinar@gmail.com</a></p>
                        </li>
                        <li class="">
                            <p><span class="fa fa-map-marker"></span>  Ataşehir/İstanbul</p>
                        </li>
                    </ul>

                </div>
                <div class="col-lg-7 mt-lg-0 mt-md-5 mt-4">
                    <form method="post">
                        <div class="twice-two">
                            @Html.TextBoxFor(x => x.SenderNameSurname, new {@class="form-control", placeholder = "İsim ve Soyisminiz", required = "" })
                            @Html.TextBoxFor(x => x.SenderMail, new {@class="form-control", placeholder = "Mail Adresiniz", required = "" })
                        </div>
                        <div class="twice">
                            @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control", placeholder = "Konu Başlığı", required = "" })
                        </div>
                        @Html.TextAreaFor(x=>x.MessageContent, new { @class = "form-control", placeholder = "Konu Başlığı", required = "" })
                        <div class="text-right">
                            <button type="submit" class="btn btn-secondary btn-style mt-4">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
